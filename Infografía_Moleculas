    <script>
        document.addEventListener('DOMContentLoaded', () => {
            
            const CHART_COLORS = {
                red: 'rgba(255, 65, 54, 0.7)',
                yellow: 'rgba(255, 220, 0, 0.7)',
                blue: 'rgba(0, 116, 217, 0.7)',
                fuchsia: 'rgba(240, 18, 190, 0.7)',
                cyan: 'rgba(64, 224, 208, 0.7)',
            };
            const CHART_BORDERS = {
                red: 'rgba(255, 65, 54, 1)',
                yellow: 'rgba(255, 220, 0, 1)',
                blue: 'rgba(0, 116, 217, 1)',
                fuchsia: 'rgba(240, 18, 190, 1)',
                cyan: 'rgba(64, 224, 208, 1)',
            };
            
            function wrapLabel(label, maxWidth = 16) {
                if (label.length <= maxWidth) {
                    return label;
                }
                const words = label.split(' ');
                let lines = [];
                let currentLine = '';
                words.forEach(word => {
                    if ((currentLine + ' ' + word).trim().length > maxWidth && currentLine.length > 0) {
                        lines.push(currentLine);
                        currentLine = word;
                    } else {
                        currentLine = (currentLine + ' ' + word).trim();
                    }
                });
                if (currentLine.length > 0) {
                    lines.push(currentLine);
                }
                return lines;
            }

            const tooltipTitleCallback = (tooltipItems) => {
                const item = tooltipItems[0];
                let label = item.chart.data.labels[item.dataIndex];
                if (Array.isArray(label)) {
                  return label.join(' ');
                } else {
                  return label;
                }
            };
            
            const defaultChartOptions = {
                maintainAspectRatio: false,
                responsive: true,
                plugins: {
                    legend: {
                        labels: {
                            color: '#FFFFFF',
                            font: {
                                size: 14
                            }
                        }
                    },
                    tooltip: {
                        callbacks: {
                           title: tooltipTitleCallback
                        }
                    }
                }
            };

            const carbCtx = document.getElementById('carbChart');
            if(carbCtx) {
                new Chart(carbCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Carbono', 'Hidr√≥geno', 'Ox√≠geno'],
                        datasets: [{
                            label: 'Composici√≥n',
                            data: [1, 2, 1],
                            backgroundColor: [CHART_COLORS.yellow, CHART_COLORS.cyan, CHART_COLORS.red],
                            borderColor: [CHART_BORDERS.yellow, CHART_BORDERS.cyan, CHART_BORDERS.red],
                            borderWidth: 2
                        }]
                    },
                    options: defaultChartOptions
                });
            }

            const lipidCtx = document.getElementById('lipidChart');
            if (lipidCtx) {
                new Chart(lipidCtx, {
                    type: 'bar',
                    data: {
                        labels: ['L√≠pidos', 'Carbohidratos'],
                        datasets: [{
                            label: 'Energ√≠a (kcal por gramo)',
                            data: [9, 4],
                            backgroundColor: [CHART_COLORS.red, CHART_COLORS.yellow],
                            borderColor: [CHART_BORDERS.red, CHART_BORDERS.yellow],
                            borderWidth: 2
                        }]
                    },
                    options: {
                        ...defaultChartOptions,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: { color: '#FFFFFF' },
                                grid: { color: 'rgba(255,255,255,0.2)' }
                            },
                            x: {
                                ticks: { color: '#FFFFFF' },
                                grid: { color: 'rgba(255,255,255,0)' }
                            }
                        }
                    }
                });
            }

            const proteinCtx = document.getElementById('proteinChart');
            if (proteinCtx) {
                new Chart(proteinCtx, {
                    type: 'radar',
                    data: {
                        labels: ['Enzim√°tica', 'Estructural', 'Transporte', 'Defensa', 'Movimiento'],
                        datasets: [{
                            label: 'Capacidad Funcional',
                            data: [9, 8, 7, 8, 9],
                            backgroundColor: CHART_COLORS.blue,
                            borderColor: CHART_BORDERS.blue,
                            borderWidth: 2,
                            pointBackgroundColor: CHART_BORDERS.blue,
                            pointBorderColor: '#fff',
                            pointHoverBackgroundColor: '#fff',
                            pointHoverBorderColor: CHART_BORDERS.blue
                        }]
                    },
                    options: {
                        ...defaultChartOptions,
                        scales: {
                            r: {
                                beginAtZero: true,
                                angleLines: { color: 'rgba(255,255,255,0.3)' },
                                grid: { color: 'rgba(255,255,255,0.3)' },
                                pointLabels: { 
                                    font: { size: 14 },
                                    color: '#FFFFFF' 
                                },
                                ticks: {
                                    color: '#001F3F',
                                    backdropColor: 'rgba(255,255,255,0.8)',
                                    backdropPadding: 4,
                                    borderRadius: 4
                                }
                            }
                        }
                    }
                });
            }
        });
    </script>
